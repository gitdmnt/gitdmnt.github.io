---
import { Tweet as T } from "react-twitter-widgets";

interface props {
    tweetId: string;
    hydration: string;
}

const { tweetId, hydration } = Astro.props;
---

<div class="container">
    {
        (() => {
            if (hydration === "load") {
                return <T tweetId={tweetId} client:load />;
            } else {
                return <T tweetId={tweetId} client:idle />;
            }
        })()
    }
</div>

<style>
    .wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .container {
        margin: auto;
        min-height: 120px;
        width: 100%;
        max-width: 550px;
        background-color: #eee;
        border-radius: 0.7rem;
    }
</style>
