---
import * as twitter_icon from "/public/twitter.png";
import * as github_icon from "/public/github-mark.svg";
import { string } from "astro/zod";

interface Props {
  mode?: string;
}

const { mode = "light" } = Astro.props;
---

<footer
  class="md:fixed md:h-dvh w-full md:w-28 md:self-start md:flex md:items-center md:justify-end
   py-8 md:p-0 md:border-r md:border-black md:border-dashed md:right-0"
>
  <div class="pt-8 md:p-0 h-20 md:h-screen w-full md:w-20 flex flex-col">
    <a href="https://twitter.com/41_36_22/">
      <div class="h-10 md:h-20 w-full twitter"></div>
    </a>
    <a href="https://github.com/gitdmnt/">
      <div class="h-10 md:h-20 w-full github"></div>
    </a>
  </div>
</footer>
<style>
  .twitter {
    background-color: #d56a8a;
  }
  .github {
    background-color: #1d1d1d;
  }
</style>
