---
import { MergeSorterComponent } from "../components/Mergesorter.tsx";
import Top from "@/layouts/Top.astro";
import Footer from "@/components/SimpleFooter.astro";
import "../styles/global.css";
---

<Top
  url={Astro.url.href}
  type="article"
  title="手マージソート"
  description="しまっていくぜ"
  image=""
>
  <div class="min-h-screen w-dvw bg-neutral-100 text-neutral-800">
    <div class="min-h-screen w-1/2 mx-auto py-16">
      <div class="text-center p-8 mb-4 bg-white rounded-xl shadow-lg">
        <h1 class="text-4xl font-bold">手マージソート</h1>
        <p class="text-sm text-neutral-500">ランキング作成のおともに。</p>
      </div>
      <MergeSorterComponent client:load />
    </div>
  </div>
  <Footer />
</Top>
