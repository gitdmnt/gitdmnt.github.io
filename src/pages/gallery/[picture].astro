---
import type { AstroInstance } from "astro";
import Common from "../../layouts/Common.astro";

export async function getStaticPaths() {
  const posts: AstroInstance[] = await Astro.glob("/src/content/illust/*.md");
  interface Obj {
    params: {
      picture: string;
    };
  }
  const pictures: Obj[] = posts.map((p) => {
    return {
      params: {
        picture: p.file.split("/").pop().split(".")[0],
      },
    };
  });

  return pictures;
}
const { picture } = Astro.params;
const caption = (await Astro.glob("/src/content/illust/*.md")).filter(
  (p) => p.file.split("/").pop().split(".")[0] === picture,
)[0];
interface ImageMetadata {
  src: string;
  width: number;
  height: number;
  format: string;
}
const img: ImageMetadata = (
  await Astro.glob("/src/content/illust/*.png")
).filter((p) => p.default.src.split("/").pop().split(".")[0] === picture)[0]
  .default;
---

<Common
  url={Astro.url.href}
  type="article"
  title={caption.frontmatter.title}
  description={caption.frontmatter.description}
  image={"https://" + Astro.url.host + img.src}
>
  <div class="picture_frame">
    <img
      class="picture"
      alt={caption.frontmatter.title + ", " + caption.frontmatter.description}
      src={img.src}
    />
  </div>
  {(<caption.Content />)}
  <div class="caption">
    <h1 class="title">{caption.frontmatter.title}</h1>
    <p class="date">
      {
        () => {
          const d: Date = new Date(caption.frontmatter.date);
          return d.toLocaleDateString();
        }
      }
    </p>
    <ul class="tags">
      {
        caption.frontmatter.tags.map((tag) => {
          return <li class="tag">{"#" + tag}</li>;
        })
      }
    </ul>
    <p class="description">{caption.frontmatter.description}</p>
    {
      () => {
        if (caption.frontmatter.link) {
          return (
            <p class="link">
              初出:
              <a href={caption.frontmatter.link}>{caption.frontmatter.link}</a>
            </p>
          );
        }
      }
    }
  </div>
  <a
    href="https://twitter.com/share?ref_src=twsrc%5Etfw"
    class="twitter-share-button"
    data-text={"宇田の描いた" + caption.frontmatter.title + "を見ている"}
    data-url={Astro.url.href}
    data-dnt="true"
    data-show-count="false">Tweet</a
  ><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"
  ></script>
</Common>
<style>
  .picture_frame {
    margin: auto;
  }
  img {
    width: 80%;
    margin-inline: auto;
    margin-block: 20px;
    display: block;
  }
  .caption {
    margin: auto;
  }
  .title {
    text-align: center;
    margin-block: 1.5rem;
  }
  .date {
    text-align: right;
    color: #cccccc;
    font-size: 8pt;
    margin: 0;
  }
  .tags {
    list-style: none;
    padding: 0;
    margin-block: 0;
  }
  .tag {
    display: inline;
    padding: 0.2rem;
    color: #444444;
    font-size: 10pt;
  }
  .description {
  }
  .link {
    font-size: 10pt;
  }
</style>
