---
import type { AstroInstance } from "astro";
import Common from "../../layouts/Common.astro";
import { Image } from "astro:assets";
import { Temporal } from "temporal-polyfill";

export async function getStaticPaths() {
  const posts = Object.values(
    import.meta.glob("/src/content/illust/*.png", { eager: true })
  ) as Array<any>;
  interface Obj {
    params: {
      picture: string;
    };
  }
  const pictures: Obj[] = posts.map((p) => {
    return {
      params: {
        picture: p.default.src.split("/").pop().split(".")[0],
      },
    };
  });

  return pictures;
}
const { picture } = Astro.params;
const caption: any = Object.values(
  import.meta.glob("/src/content/illust/*.md", { eager: true })
).filter((p: any) => p.file.split("/").pop().split(".")[0] === picture)[0];
const img = (
  Object.values(
    import.meta.glob("/src/content/illust/*.png", { eager: true })
  ) as Array<any>
).filter(
  (p: any) => p.default.src.split("/").pop().split(".")[0] === picture
)[0]?.default;
---

<Common
  url={Astro.url.href}
  type="article"
  title={caption.frontmatter.title}
  description={caption.frontmatter.description}
  image={"https://" + Astro.url.host + img.src}
>
  <div class="picture_frame">
    <a href={Astro.url + "/native"}>
      <Image
        class="picture"
        alt={caption.frontmatter.title + ", " + caption.frontmatter.description}
        src={img}
        quality={10}
      /></a
    >
  </div>
  {(<caption.Content />)}
  <div class="caption">
    <h1 class="title">{caption.frontmatter.title}</h1>
    <p class="date">
      {
        Temporal.PlainDate.from(
          caption.frontmatter.date.slice(0, 10)
        ).toString()
      }
    </p>
    <ul class="tags">
      {
        caption.frontmatter.tags.map((tag) => {
          return <li class="tag">{"#" + tag}</li>;
        })
      }
    </ul>
    <p class="description">{caption.frontmatter.description}</p>
    {
      () => {
        if (caption.frontmatter.link) {
          return (
            <p class="link">
              初出:
              <a href={caption.frontmatter.link}>{caption.frontmatter.link}</a>
            </p>
          );
        }
      }
    }
  </div>
  <a
    href="https://twitter.com/share?ref_src=twsrc%5Etfw"
    class="twitter-share-button"
    data-text={"宇田の描いた" + caption.frontmatter.title + "を見ている"}
    data-url={Astro.url.href}
    data-dnt="true"
    data-show-count="false">Tweet</a
  ><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"
  ></script>
</Common>
<style>
  .picture_frame {
    margin: auto;
  }
  img {
    width: 80%;
    height: auto;
    margin-inline: auto;
    margin-block: 20px;
    display: block;
  }
  .caption {
    margin: auto;
  }
  .title {
    text-align: center;
    margin-block: 1.5rem;
  }
  .date {
    text-align: right;
    color: #cccccc;
    font-size: 8pt;
    margin: 0;
  }
  .tags {
    list-style: none;
    padding: 0;
    margin-block: 0;
  }
  .tag {
    display: inline;
    padding: 0.2rem;
    color: #444444;
    font-size: 10pt;
  }
  .description {
  }
  .link {
    font-size: 10pt;
  }
</style>
